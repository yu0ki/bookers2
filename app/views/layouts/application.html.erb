<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!--レスポンシブ対応用のviewport-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum^scale=1">
    
    <script src="https://kit.fontawesome.com/3caa0f69bb.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    
    <!--ヘッダー-->
    <header>
      

          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            
            <div class="container">
              <a href = "/" class="text-white navbar-brand">Bookers</a>
              
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <% if user_signed_in? %>
                    <li class="nav-item"><%= link_to root_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-home"></i> Home<% end %></li>
                    <li class="nav-item"><%= link_to users_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-users"></i> Users<% end %></li>
                    <li class="nav-item"><%= link_to books_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-books"></i> Books<% end %></li>
                    <li class="nav-item"><%= link_to destroy_user_session_path, method: :delete, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-sign-out-alt"></i> Logout<% end %></li>
                    
                  <% else %>
                    
                    <li class="nav-item"><%= link_to root_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-home"></i> Home<% end %></li>
                    <li class="nav-item"><%= link_to homes_about_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-link"></i> About<% end %></li>
                    <li class="nav-item"><%= link_to new_user_registration_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-user-plus"></i> Sign up<% end %></li>
                    <li class="nav-item"><%= link_to new_user_session_path, class: "text-white font-weight-bold nav-link" do %><i class="fas fa-sign-in-alt"></i> Login<% end %></li>
                    
                  <% end %>
                </ul>
              </div>
              
              
            </div>
                
            
          </nav>
       
        
        
        
        
     
    </header>
    
    
    <main>
      <!--各ページ固有の内容-->
      <%= yield %>
    </main>

    
    <!--フッター-->
    <footer>
      <div class="row">
        <p class="mx-auto">CopyRight Infratop.inc</p>
      </div>   
    </footer>
  </body>
  
</html>
