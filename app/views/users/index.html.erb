<div class="container">
    <div class="row">
        <%= render "/layouts/leftbar", user: @user ,book: @book %>
        
        <div class="col-8 offset-md-1">
            <h2>Users</h2>
            
            <table class="table">
                <tr>
                   <th>image</th>
                   <th>name</th>
                </tr>
                
                <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image, size:"40x40", fallback: "no_image.jpg", size:"40x40" %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", user_path(user) %></td>
                    </tr>
                <% end %>
                
            </table>
            
        </div>
    </div>
</div>