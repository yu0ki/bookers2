<div class="container">
    
    
    <div class="row">
        <div class="col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto">
            <!--見出し-->
            <h1>welcome to <i class="fas fa-book"></i>Bookers</h1>
    
    
            <!--トップメッセージ-->
    
            <p>In <i class="fas fa-book"></i>Bookers,</p>
            <p>you can share and exchange your opinions , inpressions , and emotions</p>
            <p>about various books!</p>
    
    
            <!--ログイン・サインアップボタン-->
            <div class="row">
                <div class="col-10 mx-auto">
                    <%= link_to new_user_session_path do %>
                        <button button type="button" class="btn btn-info btn-block btn-sm mb-3">Log in</button>
                    <% end %>
                    
                    <%= link_to new_user_registration_path do %>
                        <button type="button" class="btn btn-info btn-block btn-sm mb-3">Sign up</button>
                    <% end %>
                </div>
                
            </div>
    
            
            
        </div>
    </div>
    
    
</div>